{% extends 'base.html.twig' %}

{% block title %}Performance index{% endblock %}

{% block body %}
    <h1>Performance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>player Id</th>
                <th>Saison</th>
                <th>Assist</th>
                <th>Goal</th>
                <th>TimePlayed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for performance in performances %}
            <tr>
                <td>{{ performance.id }}</td>
                <td>{{ performance.player.name }}</td>
                <td>{{ performance.saison }}</td>
                <td>{{ performance.assist }}</td>
                <td>{{ performance.goal }}</td>
                <td>{{ performance.timePlayed }}</td>
                <td>
                    <a href="{{ path('performance_show', {'id': performance.id}) }}">show</a>
                    <a href="{{ path('performance_edit', {'id': performance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %} 
        </tbody>
    </table>

    <a href="{{ path('performance_new') }}">Create new</a>
{% endblock %}
