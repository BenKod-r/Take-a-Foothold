{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <section>
        <h1 class="text-center">Choisir un avatar à {{ player.name }}</h1>
        <div class="card-deck">
        {% for image in images %}
            <div class="col-6 col-lg-4 col-xl-3">
                <div class="card">
                    <img class="card-img-top" src="{{ asset ('/uploads/images/' ~ image.path) }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">{{ image.description }}</p>
                        <p class="card-text"><small class="text-muted">{{ image.path }}</small></p>
                    </div>
                    <a class="btn btn-outline-dark btn-block" href="{{ path('player_new_poster', { 'player' : player.id, 'image' : image.id }) }}">Choisir cette image</a>
                </div>
            </div>
        {% else %}
            <h2 class="text-center">Aucune image trouvée</td>
        {% endfor %}
        </div>
        <div>
            <a href="{{ path('player_add_poster', { 'player' : player.id}) }}">Ajouter une image</a>
        </div>
    </section>
{% endblock %}
