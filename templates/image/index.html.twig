{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <section>
        <h1 class="text-center">Bibliothèque d'images</h1>
        <div class="card-deck">
        {% for image in images %}
            <div class="col-xs-12 col-lg-4">
                <div class="card">
                    <img class="card-img-top" src="{{ asset ('/uploads/images/' ~ image.path) }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ image.name }}</h5>
                        <p class="card-text">{{ image.description }}</p>
                        <p class="card-text"><small class="text-muted">{{ image.path }}</small></p>
                        <form method="post" action="{{ path('image_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                            <button class="btn btn-outline-dark btn-block">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <h2 class="text-center">Aucune image trouvée</td>
        {% endfor %}
        </div>
        <a class="text-warning" href="{{ path('image_new') }}">Ajouter une image</a>
    </section>
{% endblock %}
