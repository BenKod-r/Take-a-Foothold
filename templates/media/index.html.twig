{% extends 'base.html.twig' %}

{% block title %}Media index{% endblock %}

{% block body %}
    <section class="media-player">
        <div>
            <h1 class="title-section text-white bg-dark text-center">Avatar du joueur</h1>
            <div class="card-deck d-flex justify-content-center">
            {% if player.poster is not empty %}
                <div class="col-6 col-xl-3">
                    <div class="card">
                        <img class="card-img-top" src="{{ asset ('/uploads/images/' ~ player.poster.path) }}" alt="Card image cap">
                        {% if app.user %}
                            <form method="post" action="{{ path('image_delete', {'id': player.poster.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.poster.id) }}">
                                <button class="btn btn-outline-danger btn-block">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <h2 class="text-center">Aucune image trouvée</td>
            {% endif %}
            </div>
        </div>
        <div>
            <h1 class="title-section text-white bg-dark text-center">Images média du joueur</h1>
            <div class="card-deck">
            {% for image in player.image %}
                <div class="col-6 col-xl-3">
                    <div class="card">
                        <img class="card-img-top" src="{{ asset ('/uploads/images/' ~ image.path) }}" alt="Card image cap">
                        {% if app.user %}
                            {% if image != player.poster %}
                                <a class="btn btn-outline-dark btn-block " href="{{ path('player_new_poster', { 'player' : player.id, 'image' : image.id }) }}">Choisir comme avatar</a>
                            {% else %}
                                <a class="btn btn-warning"><strong>Avatar actuel</strong></a>
                            {% endif %}
                        {% endif %}
                        <div class="card-body">
                            <h1 class="card-title d-flex justify-content-center fas">{{ image.name }}</h1>
                            <p class="card-text text-justify">{{ image.description }}</p>
                        </div>
                        {% if app.user %}
                            {{ include('media/_delete_form_image.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <h2 class="text-center">Aucune image trouvée</td>
            {% endfor %}
            </div>
            {% if app.user %}
                <a href="{{ path('media_new_image', {'player' : player.id}) }}">Ajouter une image au joueur</a>
            {% endif %}
        </div>
        <div>
            <h1 class="title-section text-white bg-dark text-center">Videos média du joueur</h1>
            <div class="card-deck">
            {% for video in player.video %}
                <div class="col-12 col-lg-6">
                    <div class="card">
                        <iframe class="card-img-top" width="560" height="500" src="{{ asset (video.path) }}" alt="Card video cap" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <div class="card-body">
                            <h1 class="card-title d-flex justify-content-center fas">{{ video.name }}</h1>
                            <p class="card-text text-justify">{{ video.description }}</p>
                        </div>
                        {% if app.user %}
                            {{ include('video/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <h2 class="text-center">Aucune video trouvée</td>
            {% endfor %}
            </div>
            {% if app.user %}
                <a href="{{ path('media_new_video', {'player' : player.id}) }}">Ajouter une video au joueur</a>
            {% endif %}
            <div>
                <a href="{{ path('player_show', {'id' : player.id}) }}">Fiche du joueur</a>
            </div>
        </div>
    </section>
{% endblock %}